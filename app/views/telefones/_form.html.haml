= form_for(@telefone) do |f|
  - if @telefone.errors.any?
    #error_explanation
      %h2
        = pluralize(@telefone.errors.count, "error")
        prohibited this telefone from being saved:
      %ul
        - @telefone.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :nome
    %br/
    = f.text_field :nome
  .field
    = f.label :ramal
    %br/
    = f.text_field :ramal
  .field
    = f.label :sala
    %br/
    = f.text_field :sala
  .field
    = f.label :vinculo
    %br/
    = f.text_field :vinculo
  .actions
    = f.submit